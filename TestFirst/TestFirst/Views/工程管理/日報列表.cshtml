@model IEnumerable<TestFirst.Models.tMissionDetail>



@{
    ViewBag.Title = "日報列表";
}

<br />

<table class="table">
    <tr>
        <th>
            專案代號
        </th>
        <th>
            工程項目
        </th>
        <th>
            工程用料
        </th>
        <th>
            工地負責人
        </th>
        <th>
            工作人數
        </th>
        <th>
            天氣
        </th>
        <th>
            日期
        </th>
        <th>
            工程照片
        </th>
        <th>
            備 註
        </th>
        <th>
            編輯
        </th>
        <th>

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fChargeMan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fWorkers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fWeather)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fToday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fPhoto)
            </td>
            <td>
                @Html.ActionLink("備註", "顯示備註", "工程管理", new { id = item.fId }, new { @class = "btn btn-warning" })
            </td>
            <td>
                @Html.ActionLink("編輯", "編輯日報", "工程管理", new { fId = item.fId }, new { @class = "btn btn-info" })
            </td>
            <td>
                @Html.ActionLink("刪除", "刪除日報", "工程管理", new { fId = item.fId }, new { @class = "btn btn-danger", onclick = "return confirm('確定要刪除嗎?')" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("新增日報", "新增日報", "工程管理", null, new { @class = "btn btn-success" })
</p>
