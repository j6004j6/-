@model TestFirst.Viewmodel.CLogin
@using TestFirst.Models

@{
    ViewBag.Title = "登入系統";
    Random ran = new Random();
    string pic = " ";
    
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    
    <title>專案登入畫面 </title>
    @section styles{
        <style>
            h1 {
                margin-left: 230px;
               
            }
            body {
                margin: 0px;
                font-family: 'Courier New';
                font-size: 2rem;
                color: black;
            }

            .div1 {
                width: 800px;
                border: 1px groove #F0F0F0;
                margin: 50px auto 100px auto;
                border-radius: 20px;
                padding: 50px 50px 100px 50px;
                background-color: #F0F0F0;
            }

            .txtsm {
                width: 300px;
                border-radius: 10px;
            }

            .mytext {
                margin-top: 70px;
            }

            .txt1 {
                border-radius: 10px;
            }

            .logo {
                width: 150px;
                float: left;
                margin: 60px 30px 10px 120px;
             
            }

            .mybutton {
                width: 300px;
                padding: 10px;
                margin-left: 290px;
            }
        </style>
    }
</head>
<body class="text-center">
    <br />
    <h1 style="margin-left:320px">工程管理系統</h1>
    <form method="post">
        <div class="div1">

            <img class="logo" src="~/Content/img/Company.png" />
            <div class="mytext">
                <p><input style="margin-bottom:10px" class="txt1" type="text" name="txtAccount" placeholder="Account" autofocus required /></p>
                <p><input style="margin-top:10px" class="txt1" type="password" name="txtPassword" placeholder="Password" required /></p>
            </div>
            @*<p style="font-size:small;color:red;">@ViewBag.log_result </p>*@
            <br />
            <div>
                <p style="margin-left:118px">
                    <input style="margin-left:20px" class="txtsm" type="text" name="txtCode" placeholder="驗證碼" autofocus required />
                    @if (Session[CDictionary.SK_AUTHENTICATED_CODE] != null)
                    {

                        pic = Session[CDictionary.SK_AUTHENTICATED_CODE].ToString().Substring(0, 1) + ".png";
                        @:<img src="/Content/img/@pic" style="width:40px;float:left" />
                        pic = Session[CDictionary.SK_AUTHENTICATED_CODE].ToString().Substring(1, 1) + ".png";
                        @:<img src="/Content/img/@pic" style="width:40px;float:left" />
                        pic = Session[CDictionary.SK_AUTHENTICATED_CODE].ToString().Substring(2, 1) + ".png";
                        @:<img src="/Content/img/@pic" style="width:40px; float:left" />
                        pic = Session[CDictionary.SK_AUTHENTICATED_CODE].ToString().Substring(3, 1) + ".png";
                        @:<img src="/Content/img/@pic" style="width:40px;float:left" />
                    }

                </p>
            </div>
            <div class="mybutton">

                <button class="btn btn-lg btn-block btn-primary " type="submit">登入</button>
            </div>
            @*<div class="mybutton">
                @Html.ActionLink("註冊", "新增會員", "Home", null, new { @class = "btn btn-lg btn-block btn-primary " })
            </div>*@

        </div>
    </form>
</body>
</html>
@section scripts{
    <script>
        $('#mainNav').hide();
    </script>
}