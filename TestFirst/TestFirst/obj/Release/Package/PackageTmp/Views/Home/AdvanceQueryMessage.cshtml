@model IEnumerable<TestFirst.tMessagBoard>

@{
    ViewBag.Title = "AdvanceQueryMessage";
}

<h2>AdvanceQueryMessage</h2>

@using (Html.BeginForm())
{
    <p>
        訊息
        <br />
        @Html.TextBox("textmessage")
    </p>
    <p>
        年
        <br />
        @Html.TextBox("textyear1")-@Html.TextBox("textyear2")
    </p>
    <p>
        月
        <br />
        @Html.TextBox("textmonth1")- @Html.TextBox("textmonth2")
    </p>
    <p>
        帳號
        <br />
        @Html.TextBox("textuserid")
    </p>
    <p>
        <input type="submit" value="查詢"/>
    </p>
    <p>
        @Html.ActionLink("留言板", "留言板", "Home")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fmessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fdatetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tUser.fAccount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fmessage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fdatetime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tUser.fAccount)
                </td>
                <td>
                    @Html.ActionLink("刪除", "DeletMessage", new { fid = item.fid }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("修改", "EditMessage", new { fid = item.fid }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
}