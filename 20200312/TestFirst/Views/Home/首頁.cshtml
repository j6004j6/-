            window.location.href = "../Chart/chartProject";
        }
        // 用AJAX取得現在的提示字串放在toast裡(每10分鐘刷新一次)
        function toastshow()
        {
            console.log(@Session["UserId"])
            $.ajax({
                type: "POST",
                url: "../Home/AJAX_Home?id=" +@Session["UserId"],
                dataType: 'text',
                success: function (result) {
                    $('#toConfirm').text(result);
                    $('#time').text(' @DateTime.Now.ToShortTimeString() ');
                }
            })
            $('.toast').toast('show');
        }
        toastshow();
        setTimeout('toastshow()', 100000);
    
    </script>
</body>

</html>